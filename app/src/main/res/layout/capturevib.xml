<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <RelativeLayout
        android:id="@+id/rl_vib"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <RelativeLayout
            android:id="@+id/rl_vib_show_info"
            android:layout_width="wrap_content"
            android:layout_height="170dp"
            android:layout_below="@+id/tv_vib_type"
            android:layout_margin="10dp"
            android:background="#000000" >

            <View
                android:layout_width="fill_parent"
                android:layout_height="3dp"
                android:layout_alignParentTop="true"
                android:background="#ffffff" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="3dp"
                android:layout_alignParentBottom="true"
                android:background="#ffffff" />

            <View
                android:layout_width="3dp"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"
                android:background="#ffffff" />

            <View
                android:layout_width="3dp"
                android:layout_height="fill_parent"
                android:layout_alignParentLeft="true"
                android:background="#ffffff" />

            <TextView
                android:id="@+id/tv_vid_a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="3dp"
                android:textColor="@android:color/white"
                android:text="0.00"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/tv_vid_a_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:text="g"
                android:textColor="@android:color/white"
                android:textSize="28sp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/tv_vid_a"
                android:background="#ffffff" />

            <TextView
                android:id="@+id/tv_vid_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_vid_a"
                android:padding="5dp"
                android:text="0.0"
                android:textColor="@android:color/white"
                android:textSize="28sp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/tv_vid_b"
                android:background="#ffffff" />

            <TextView
                android:id="@+id/tv_vid_b_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/tv_vid_a"
                android:padding="5dp"
                android:text="mm/s"
                android:textColor="@android:color/white"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/tv_vid_c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_vid_b"
                android:padding="5dp"
                android:text="0"
                android:textColor="@android:color/white"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/tv_vid_c_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/tv_vid_b"
                android:padding="5dp"
                android:text="um"
                android:textColor="@android:color/white"
                android:textSize="28sp" />
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/rl_tail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#000000"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/bt_vib_capture"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:focusable="false"
            android:padding="5dp"
            android:text="采集"
            android:textColor="#ffffff"
            android:textSize="24sp" />

        <Button
            android:id="@+id/bt_back"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:focusable="false"
            android:padding="5dp"
            android:text="返回"
            android:textColor="#ffffff"
            android:textSize="24sp" />
    </LinearLayout>

</RelativeLayout>